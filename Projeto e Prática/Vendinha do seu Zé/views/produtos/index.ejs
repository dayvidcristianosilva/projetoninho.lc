<%- include('../partials/header') %>
    <%- include('../partials/header') %>

        <div class="container">
            <hr>
            <h2>Produtos</h2>
            <hr>

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Descrição</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% produtos.forEach(produto=>{%>
                        <tr>
                            <td>
                                <% produto.titulo %>
                            </td>
                            <td>
                                <% produto.descricao %>
                            </td>
                            <td>
                                <a href="/produtos/edit" <%= produto. class="btn btn-warning">Editar</a>
                                <form action="/produto/delete" method="post" onsubmit="confirmarDelecacao(event, )">
                                    <input type="hidden" name="id" value="<%= produto.id %>">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>

        <%- include('../partials/footer') %>

            <script>
                function confirmarDelecacao(event, this) {
                    event.preventDefault();
                    var decision = confirm("você deseja deletar este produto?");
                    if (decision) {
                        form.submit();
                    }
                }
            </script>